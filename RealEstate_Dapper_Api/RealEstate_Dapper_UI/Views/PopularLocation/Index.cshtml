@model List<RealEstate_Dapper_UI.Dtos.PopularLocationDtos.ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<style>
    img{
        border-radius:50%;
        height:40px;
        width:40px;
        margin-right:8px;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Izgara Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir İsmi</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count
                                    <td><img src="@item.ImageUrl"/> @item.CityName</td>
                                    <td><a href="/PopularLocation/DeletePopularLocationDetail/@item.LocationID" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/PopularLocation/UpdatePopularLocationDetail/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/PopularLocation/CreatePopularLocationDetail/" class="btn btn-outline-info">Yeni Lokasyon Giriş</a>
                </div>
            </div>
        </div>
    </div>
</div>


