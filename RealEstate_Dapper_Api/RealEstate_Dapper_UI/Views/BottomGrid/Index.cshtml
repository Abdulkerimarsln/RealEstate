@model List<RealEstate_Dapper_UI.Dtos.BottomGridDtos.ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Izgara Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İkon</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count
                                    <td class="@item.Icon"></td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="/BottomGrid/DeleteBottomGridDetail/@item.BottomGridID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGridDetail/@item.BottomGridID" class="btn btn-outline-success">Güncelle</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/BottomGrid/CreateBottomGridDetail/" class="btn btn-outline-info">Yeni Izgara Giriş</a>
                </div>
            </div>
        </div>
    </div>
</div>


